@model List<Category>
<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			 <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus"></i>  Create New Category
			 </a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
<thead>
<tr>
	<th>
		Category Name
	</th>
	<th>
		Display Order
	</th>
</tr>
</thead>
<tbody>
	@foreach(var ob in Model.OrderBy(o=>o.Displayorder))
	{
	<tr>
		<td>
			@ob.Name
		</td>
		<td>
			@ob.Displayorder
		</td>
	</tr>
	}
</tbody>
</table>