@model IEnumerable<MoviesDatabaseApplication.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.UserName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Phone)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.IsActive)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Role.RoleName)</th>
                <th scope="col">Audit</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
                    <td>
                        <select class="form-select" onchange="changeAudit(this)">
                            <option value="Created By">@Html.DisplayNameFor(model => model.CreatedBy) : @Html.DisplayFor(modelItem => item.CreatedBy)</option>
                            <option value="Created Date">@Html.DisplayNameFor(model => model.CreatedDate) : @Html.DisplayFor(modelItem => item.CreatedDate)</option>
                            <option value="Updated By">@Html.DisplayNameFor(model => model.UpdatedBy) : @Html.DisplayFor(modelItem => item.UpdatedBy)</option>
                            <option value="Updated Date">@Html.DisplayNameFor(model => model.UpdatedDate) : @Html.DisplayFor(modelItem => item.UpdatedDate)</option>
                        </select>
                    </td>
                    <td>
                        <div class="d-flex justify-content-start">
                            <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-outline-primary btn-sm me-1"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-outline-success btn-sm me-1"><i class="bi bi-ticket-detailed"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-outline-danger btn-sm me-1"><i class="bi bi-x-square-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
