@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

@{
    ClaimsPrincipal claimUser = HttpContextAccessor.HttpContext.User;
}

<ul class="navbar-nav">
    @if (claimUser.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        @if(claimUser.IsInRole("Admin"))
        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" asp-area="" asp-controller="Movies" asp-action="Index">Movies</a>
                    <a class="dropdown-item" asp-area="" asp-controller="MovieCasts" asp-action="Index">Movies Cast</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Castcrews" asp-action="Index">Cast and Crew</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Reviews" asp-action="Index">Reviews</a>
                    <a class="dropdown-item" asp-area="" asp-controller="UserInteractions" asp-action="Index">User Interactions</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index">User</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Roles" asp-action="Index">Role</a>
                </div>
            </li>
        }
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" href="@Url.Action("Index", "Home")">Hello @claimUser.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">LogOut</a>
        </li>
    }
    else
    {
      
    }
</ul>
